{
	"compilerOptions": {
		// --- 기본 설정 ---
		"module": "commonjs", // VS Code 확장 프로그램은 CommonJS 모듈 시스템을 사용합니다.
		"target": "es2020", // 최신 Node.js 버전과 호환되는 ECMAScript 버전으로 설정합니다.
		"outDir": "out", // 컴파일된 JavaScript 파일이 저장될 폴더를 지정합니다.
		"rootDir": "src", // TypeScript 소스 코드의 루트 폴더를 지정합니다.
		"sourceMap": true, // 디버깅을 위해 소스 맵 파일을 생성합니다.
		"strict": true, // 모든 엄격한 타입-체킹 옵션을 활성화하여 코드 안정성을 높입니다.

		// --- 모듈 해석 관련 설정 ---
		"moduleResolution": "node", // Node.js 스타일로 모듈을 해석합니다.
		"esModuleInterop": true, // CommonJS와 ES 모듈 간의 호환성을 높입니다.

		// --- 추가 설정 ---
		"skipLibCheck": true, // 의존성 라이브러리의 타입 선언 파일 검사를 건너뛰어 컴파일 속도를 높입니다.
		"forceConsistentCasingInFileNames": true // 파일 이름의 대소문자를 일관되게 사용하도록 강제합니다.
	},
	"include": [
		"src" // 컴파일할 파일이 포함된 폴더를 명시합니다.
	],
	"exclude": [
		"node_modules", // 컴파일에서 제외할 폴더를 명시합니다.
		".vscode-test"
	]
}
